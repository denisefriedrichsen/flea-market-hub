<div class="container">
  <div class="header">
    <h1>Your Profile</h1>
  </div>
  <div class="profile-image">
    <% if @user.photo.attached? %>
      <%= cl_image_tag @user.photo.key %>
    <% else %>
      <%= image_tag 'user.png'%>
    <% end %>
  </div>
  <div class="profile-information">
    <div class="profile-details">
      <br>
      <br>
      <div class="name"><p><strong>Name:</strong> <%= @user.name %></p></div>
      <div class="email"><p><strong>Email:</strong> <%= @user.email %></p></div>
      <div class="password"><p><strong>Password:</strong> <%= @user.password%></p></div>
    </div>
    <div class="profile-buttons">
      <%= link_to "Edit profile", edit_user_path, class: "btn btn-gradient" %>
      <%= link_to "Delete profile", user_path(@user), class: "btn btn-gradient" %>
    </div>
  </div>
</div>
