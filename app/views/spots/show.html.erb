 <div class="container-spots-show-banner">
  <% if @spot.photo.attached? %>
      <%= cl_image_tag @spot.photo.key %>
      <% else %>
      <%= image_tag 'flea-market-2.jpeg'%>
      <% end %>
</div>

<div class="container-spots-show">

  <div class="container-spots-show-details">
    <h1><%= @spot.title %></h1>
      <br>
      <p><strong>Description:</strong> <%= @spot.description %></p>
      <p><strong>Price:</strong> <%= @spot.price %></p>
      <p><strong>Availability:</strong> <%= @spot.availability %></p>
      <p><strong>Address:</strong> <%= @spot.address %></p>
      <p><strong>Owner of the spot:</strong> <%= @spot.user.name %></p>

    <%= link_to spot_path(@spot), method: :delete, data: { confirm: "Are you sure?" } do %>
      <i class="fa fa-trash destroy_spot"></i>
    <% end %>
  </div>

  <div class="container-spots-show-form">
    <h1>Book this spot</h1>
    <div class="container-form">
      <%= render 'bookings/new', spot: @spot, booking: @booking %>
    </div>
  </div>

</div>
