<div class="container">
  <%= simple_form_for(@spot) do |f| %>
    <div class="form-inputs">
      <%= f.input :title %>
      <%= f.input :address %>
      <%= f.input :description %>
      <%= f.input :price %>
      <%= f.input :photo, as: :file %>
    </div>
    <br>
    <div class="form-actions">
      <%= f.button :submit, class: "btn btn-primary" %>
    </div>
    <br>
  <% end %>
</div>
