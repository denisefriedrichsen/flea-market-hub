<div class="container mt-4">

  <div id="test mt-2">
      <div class="search-form">
        <%= render 'shared/search-form' %>
      </div>
    </div>

  <div class="spot-index-buttons mt-2">
    <%= link_to 'View all spots', spots_path, class: "btn btn-purple"%>
    <%= link_to "Create a new spot", new_spot_path, class: "btn btn-purple"%>
  </div>

<div class="index-spots-map-cards">
      <div class="cards">
      <% @spots.each do |spot| %>
        <div class="card-spot mt-4">
          <% if spot.photo.attached? %>
            <%= cl_image_tag spot.photo.key, crop: :fill %>
          <% else %>
            <%=  image_tag image_path("flea-market-2.jpeg")%>
          <% end %>
          <!-- <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" /> -->
          <div class="card-spot-infos">
            <div>
              <h2><%= link_to spot.title, spot_path(spot) %></h2>
              <p><%= spot.description %></p>
            </div>
            <h2 class="card-spot-pricing"><%=spot.price%>â‚¬</h2>
            <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-spot-user avatar-bordered" />
          </div>
        </div>
      <% end %>
      </div>
      <div class="map">

      <%= render 'shared/map' %>

</div>
</div>
</div>
